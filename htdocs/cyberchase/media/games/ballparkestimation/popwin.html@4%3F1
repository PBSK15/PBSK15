<script language="javascript">
var code = 0;
var paramString = document.URL;
var paramArray = new Array();
if ( paramString.indexOf("?") != -1 ) {
    paramArray = paramString.split("?");
    if ( paramArray.length != 0 ) {
        code = paramArray[1].toString();
    }
}

if ( code == 1 ) {
	message = "Yes!  Your estimate is what the machine was expecting. ";
	if ( paramArray[2] != 3 ) { message += "Let's try another one."; }
	f = opener.nextRound;
}
if ( code == 2 ) {
	message = "Nice job.  That is the correct number.  But remember:  You don't have to add all of the numbers to get a good estimation. ";
	if ( paramArray[2] != 3 ) { message += "Let's try another one."; }
	f = opener.nextRound;
}
if ( code == 3 ) {
	message = "Uh oh!  You've run out of time for this round.  Try again with a new set of numbers.";
	f = opener.nextRound;
}
if ( code == 4 ) {
	message = "Very close!  Your estimate is close to what the machine was expecting. ";
	if ( paramArray[2] != 3 ) { message += "Let's try another one."; }
	f = opener.nextRound;
}
if ( code == 5 ) {
	message = "You have estimated too low.  Try again.";
	f = opener.resetClock;
}
if ( code == 6 ) {
	message = "You have estimated too high.  Try again.";
	f = opener.resetClock;
}
if ( code == 7 ) {
	message = "You could round " + paramArray[2] + " to " + paramArray[3];
	f = opener.resetClock;
}

document.write(message);

</SCRIPT>
	
		
