					<color>random</color>
				</goal>
				<nongoals>					
					<size>lg</size>
					<size>sm</size>
					<color>blue</color>
					<color>green</color>
					<color>orange</color>
					<shape>Square</shape>
					<shape>Circle</shape>
					<shape>Triangle</shape>
					<shape>Pentagon</shape>
				</nongoals>
				<phase>					
					<shape>random</shape>
					<size>random</size>
					<color>random</color>
				</phase>
				<phase>	
					<shape>random</shape>
					<size>any</size>
					<color>random</color>
				</phase>				
				<phase>
					<shape>same</shape>
