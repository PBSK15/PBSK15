	</div>
	
	<p>&nbsp;</p>
	
</div>

<script type="text/javascript">
    var so = new PBS_SWFObject("AnimalCardGame.swf", "AnimalCardGame", "740", "525", "7", "#FFCC01");
    so.setAttribute('redirectUrl', '/curiousgeorge/games/noflash.html');
    so.addParam("quality", "best");
