{% extends 'curiousgeorge/includes/templates/flash_game_page.html.twig' %}
{% set ftrAttributes = 'id="ftr-games"' %}
{% set pageTitle = 'Big Picture' %}

{% block gameFrame %}<div id="flash-game">
	<div id="flashcontent">
		<p>&nbsp;</p>
		<h2>This game requires Flash version 6</h2>
		<h2>You can <a href="https://pbskids.org/cgi-registry/kidsbridge.cgi?context=curiousgeorge_flash_player">download the latest version of Flash</a> for FREE.</h2>
		<object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"
		 codebase="https://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,0,0"
		 width="724" height="338" id="big_picture" align="">
		 <param name="movie" value="big_picture15.swf?" />
		 <param name="quality" value="best" />
		 <param name="bgcolor" value="#FFCC01" />
			 <embed
				src="big_picture15.swf?"
				quality="best"
				bgcolor="#FFCC01"
				width="724"
				height="338"
				name="big_picture"
				type="application/x-shockwave-flash"
				pluginspage="https://www.macromedia.com/go/getflashplayer">
			  </embed>
		</object>

	</div>

	<div id="nametag">
		<img src="/curiousgeorge/games/img/nt_big_picture.gif" alt="Big Picture" />
		<p>Parents & Teachers! <a href="https://www.pbs.org/parents/curiousgeorge/site/site_features.html#big_picture">Learn more about Big Picture</a>.</p>
	</div>

	<p>&nbsp;</p>

</div>

<script type="text/javascript">
    var so = new PBS_SWFObject("big_picture15.swf", "big_picture", "724", "338", "6", "#FFCC01");
    so.setAttribute('redirectUrl', '/curiousgeorge/games/noflash.html');
    so.addParam("quality", "best");
    ////PBS_enable_cdn(so);  // This will push the object out to Mirror Image
    so.write("flashcontent");
</script>
<!-- end bbinclude -->{% endblock %}