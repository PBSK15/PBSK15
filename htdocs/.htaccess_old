Options +FollowSymLinks
RewriteEngine On

# Force trailing slash
<IfModule mod_rewrite.c>
	RewriteBase /
	
	RewriteCond %{REQUEST_URI} /+[^\.]+$ 
	RewriteRule ^(.+[^/])$ %{REQUEST_URI}/ [R=301,L]
</IfModule>

